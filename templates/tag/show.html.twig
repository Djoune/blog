{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-5">
            <h1 class="col">Tag</h1>
            <a class="text-right" href="{{ path('tag_index') }}">back to list</a>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
            </tbody>
        </table>
        <div>
            {{ include('tag/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
