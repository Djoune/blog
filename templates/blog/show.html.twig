{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for category in categories %}
            <div class="mt-4">
                <h2>{{category.name }}</h2>
            </div>
            <div class="row">
                {% for article in category.articles %}
                    <div class="col-md-3">
                        <div class="card mt-2">
                            <p class="card-header">{{ article.title }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}