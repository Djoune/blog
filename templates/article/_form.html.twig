{{ form_start(form) }}
<div class="row">
    <div class="col">{{ form_row(form.title) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.content) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.category) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_rest(form) }}</div>
</div>
<button type="submit" class="btn btn-primary">{{ button|default('Save') }}</button>
{{ form_end(form) }}
