{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="my-5">Article</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ article.category.name }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{% for tag in tags %}
                        <li>
                            <a href="{{ path('blog_show_tag', {'tag': tag.name}) }}"> {{ tag.name }}</a>
                        </li>
                    {% else %}
                        <li>No tags for this article</li>
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('article_index') }}">back to list</a>

    <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
